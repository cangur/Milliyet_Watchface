<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:orientation="vertical"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".ui.NewsListActivity"
    tools:deviceIds="wear">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_newsdetail_rv_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!--<ImageView-->
    <!--android:background="@drawable/milliyet_background"-->
    <!--android:id="@+id/welcome_screen"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent" />-->

    <android.support.wear.widget.CircularProgressLayout
        android:id="@+id/progress_bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:visibility="visible"
        app:colorSchemeColors="@color/white"
        app:indeterminate="true"
        app:strokeWidth="25dp" />
</FrameLayout>